# Diário de Bordo Digital - Configurações Docker
# Copie este arquivo para .env e ajuste conforme necessário

# Portas
FRONTEND_PORT=4200
API_PORT=8191
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
MYSQL_PORT=3306
REDIS_PORT=6379
PORTAINER_PORT=9000

# Base de dados MySQL
MYSQL_ROOT_PASSWORD=DiarioBordo2024!
MYSQL_DATABASE=diario_bordo
MYSQL_USER=diario_user
MYSQL_PASSWORD=DiarioUser2024!

# JWT Configuration
JWT_SECRET_KEY=DiarioBordoSecretKey2024VeryLongAndSecureKey123!
JWT_ISSUER=DiarioBordo
JWT_AUDIENCE=DiarioBordoApp
JWT_EXPIRATION_MINUTES=15
JWT_REFRESH_EXPIRATION_DAYS=7

# ANAC Integration
ANAC_SYNC_ENABLED=true
ANAC_SYNC_INTERVAL_HOURS=1

# Logging
LOG_LEVEL=Information
ASPNETCORE_LOG_LEVEL=Warning

# Environment
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production

# SSL/TLS (para produção)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem